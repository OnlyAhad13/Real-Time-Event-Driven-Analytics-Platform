# ============================================
# Real-Time Analytics Platform - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!
# ============================================

# -------------------- Kafka --------------------
KAFKA_BROKER_ID=1
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092,PLAINTEXT_HOST://localhost:29092
KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
KAFKA_INTER_BROKER_LISTENER_NAME=PLAINTEXT
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_AUTO_CREATE_TOPICS_ENABLE=true
KAFKA_NUM_PARTITIONS=3

# -------------------- Zookeeper --------------------
ZOOKEEPER_CLIENT_PORT=2181
ZOOKEEPER_TICK_TIME=2000

# -------------------- MinIO (S3-Compatible) --------------------
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=minio_password_change_me
MINIO_ENDPOINT=http://minio:9000
MINIO_CONSOLE_PORT=9001

# S3 Bucket Names
S3_BUCKET_RAW=raw-events
S3_BUCKET_BRONZE=bronze
S3_BUCKET_SILVER=silver
S3_BUCKET_GOLD=gold

# -------------------- PostgreSQL --------------------
POSTGRES_USER=analytics_user
POSTGRES_PASSWORD=analytics_password_change_me
POSTGRES_DB=analytics_warehouse
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# -------------------- Spark --------------------
SPARK_MASTER_URL=spark://spark-master:7077
SPARK_MASTER_WEBUI_PORT=8080
SPARK_WORKER_WEBUI_PORT=8081
SPARK_WORKER_CORES=2
SPARK_WORKER_MEMORY=2g
SPARK_DRIVER_MEMORY=1g
SPARK_EXECUTOR_MEMORY=1g

# -------------------- Jupyter --------------------
JUPYTER_TOKEN=analytics_jupyter_token
JUPYTER_PORT=8888

# -------------------- AWS Credentials (For MinIO S3 Compatibility) --------------------
AWS_ACCESS_KEY_ID=minio_admin
AWS_SECRET_ACCESS_KEY=minio_password_change_me
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://minio:9000

# -------------------- Application Settings --------------------
ENVIRONMENT=development
LOG_LEVEL=INFO